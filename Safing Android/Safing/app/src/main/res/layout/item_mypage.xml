<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_weight="8"
        android:id="@+id/mypage_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp">
    <ImageView
        android:id="@+id/mypage_list_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/youtube">
    </ImageView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/mypage_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:text="제목이 들어올 곳"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black">
    </TextView>
        <TextView
            android:id="@+id/mypage_list_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="내용이 들어올 곳"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black">
        </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/like1">
        </ImageView>
        <TextView
            android:id="@+id/mypage_list_like_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="좋아요 수"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="20dp">
        </TextView>

        <ImageView

            android:layout_marginLeft="25dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/mypage_list_commentimg">
        </ImageView>
        <TextView
            android:id="@+id/mypage_list_coment_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="댓글 수"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="20dp">

        </TextView>

    </LinearLayout>
        <TextView
            android:id="@+id/mypage_list_writedete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp">

        </TextView>



    </LinearLayout>

    <LinearLayout
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent">
    <ImageButton

        android:background="#00000000"
        android:id="@+id/mypage_list_delete"
        android:layout_margin="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/mypage_list_delete"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
        <ImageButton
            android:background="#00000000"
            android:id="@+id/mypage_list_update"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/mypage_list_update"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    </LinearLayout>

</LinearLayout>
